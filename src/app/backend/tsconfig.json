{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/backend",    
    "rootDir": "./..",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": [
      "node_modules/@types",
      "./typings",
      "./backend/types",
      "./_shared/types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "_shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}